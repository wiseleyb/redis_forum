<h1>Listing forums</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Created By</th>
    <th>Topics</th>
    <th>Posts</th>
    <th>Last Post Date</th>
  </tr>

<% @forums.each do |forum| %>
  <tr>
    <td><%=h forum.title %></td>
    <td><%=h forum.description %></td>
    <td><%=h user_display(forum.user)%></td>
    <td><%=forum.topic_count%></td>
    <td><%=forum.post_count%></td>
    <td><%=forum.last_post_date%></td>
    <td><%= link_to 'Show', forum %></td>
    <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
    <td><%= link_to 'Destroy', forum, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New forum', new_forum_path %>