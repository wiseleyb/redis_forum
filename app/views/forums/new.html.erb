<h1>New forum</h1>

<form action="/forums/create" class="edit_forum" id="edit_forum" method="post">

  <p>
    <label for="forum_title">Title</label><br />
    <input id="forum_title" name="forum[title]" size="30" type="text" />
  </p>
  <p>
    <label for="forum_description">Description</label><br />
    <textarea cols="40" id="forum_description" name="forum[description]" rows="20"></textarea>
  </p>
	<%= render :partial => "/users/select_user" %>
  <p>
    <input id="forum_submit" name="commit" type="submit" value="Create" />
  </p>
</form>

<%= link_to 'Back', forums_path %>